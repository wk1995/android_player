<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/live_paly_mask_top_bg"
    tools:ignore="MissingDefaultResource">
    <ImageView
        android:id="@+id/ivLivePlayBack"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:paddingHorizontal="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="19dp"
        android:src="@drawable/live_play_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="back" />
    <ImageView
        android:id="@+id/ivLivePlayClose"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/live_play_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivLivePlayBack"/>
    <ImageView
        android:id="@+id/ivLivePlayShare"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:src="@drawable/live_play_mask_top_share"
        app:layout_constraintEnd_toStartOf="@id/ivLivePlayClose"
        app:layout_constraintTop_toTopOf="@id/ivLivePlayBack"/>
    <TextView
        android:id="@+id/tvLivePlaySpeed"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:text="1.0"
        android:src="@drawable/live_play_close"
        app:layout_constraintEnd_toStartOf="@id/ivLivePlayShare"
        app:layout_constraintTop_toTopOf="@id/ivLivePlayBack"/>
</androidx.constraintlayout.widget.ConstraintLayout>